extends layout

block content
  div.container.display
    if name
      h1 #{name}
    if address && city
      section
        h3 Location:
        p
          a(href="#{addressUrl}", target="_blank") #{address}, #{city} #{zip}

            
      hr
        
    if website
      section
        h3 Visit their website:
        p 
          a(href='#{website}', target="_blank") #{website}
    
      hr
    
    if phone
      section
        h3 Call for more information:
        p 
          span.phone #{phone}
